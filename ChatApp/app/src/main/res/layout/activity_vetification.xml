<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_horizontal"
    tools:context=".VetificationActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/otp"
        android:layout_marginTop="100dp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Vetification"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#036007"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We will send you an"
            android:layout_marginRight="6dp"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#656262" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Time Password"
            android:layout_marginRight="6dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0B0B0B" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on this mobile number..."
        android:layout_marginRight="6dp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#656262" />
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:elevation="40dp" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:padding="15dp"
            android:layout_margin="15dp">
            <EditText
                android:id="@+id/Editnumber"
                android:hint="Type your phone number"
                android:layout_width="match_parent"
                android:ems="1"
                android:textStyle="bold|normal"
                android:textSize="20sp"
                android:textColor="#1C1C1C"
                android:inputType="phone"
                android:padding="10dp"
                android:layout_marginBottom="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shape" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/continueBtn"
                android:text="Continue"
                android:textStyle="bold|normal"
                android:textAllCaps="false"
                android:backgroundTint="#32BD38"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>